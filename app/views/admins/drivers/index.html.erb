<div class="container-fluid">
  <a href="/admins/drivers/new">
    <button type="button" class="btn btn-success" style="margin-left:15px ;"><i class="fas fa-user-plus"></i>
    <b>Novo Motorista</b></button>
  </a>
<div class="card-body">
  <div class="table-responsive">
    <table id="myTable" class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome Completo</th>
          <th>Apelido</th>
          <th>CPF</th>
          <th>Celular</th>
          <th>Ativo ?</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @drivers.each do |var| %>
          <tr>
            <td> <%= var.id %> </td>
            <td> <%= var.name_full %> </td>
            <td> <%= var.nickname %> </td>
            <td> <%= var.cpf %> </td>
            <td> <%= var.cellphone %> </td>
            <td> <%= humanize_boolean(var.active) %> </td>
            <td>
              <%= link_to edit_admins_driver_path(var),
                class: "btn btn-primary btn-xs btn-green-alt" do %>
                <i class="fas fa-edit"></i>
                Editar
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
