<h6 class="m-3 font-weight-bold text-primary"> <%= "#{action_message} Motorista"%></h6>
<% if @driver.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @driver.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card" style="height: 35rem; padding-top: 4%;">
  <div class="col-12">
    <%= form_with(model: [ :admins, @driver], local: true) do |form| %>
      <div class="container">
        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <label for="">Nome Completo</label>
              <%= form.text_field :name_full, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">Apelido</label>
              <%= form.text_field :nickname, class: "form-control" %>
            </div>
          </div>
        </div>

         <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">CPF</label>
              <%= form.text_field :cpf, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">Celular</label>
              <%= form.text_field :cellphone, class: "form-control" %>
            </div>
          </div>
        </div>



        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">Ativo ?</label>
              <div>
                <%= form.check_box :active %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <div class="float-right">
                <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Salvar</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
