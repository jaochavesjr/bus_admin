<h6 class="m-3 font-weight-bold text-primary"> <%= "#{action_message} Viagem"%></h6>
<% if @travel.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @travel.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card" style="height: 35rem; padding-top: 4%;">
  <div class="col-12">
    <%= form_with(model: [ :admins, @travel], local: true) do |form| %>
      <div class="container">

        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="col-sm-6">
              <label for="">Estado de Origem</label>
              <%= form.collection_select :state_origin_id, State.all, :id, :name, :include_blank => true, class: "form-control" %>
            </div>
          </div>

           <div class="form-group col-md-6">
            <div class="col-sm-6">
              <label for="">Cidade de Origem</label>
              <%= form.collection_select :origin_id, City.all, :id, :name, :include_blank => true, class: "form-control" %>
            </div>
          </div>
        </div>


        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="col-sm-6">
              <label for="">Estado de Destino</label>
              <%= form.collection_select :state_destination_id, State.all, :id, :name, :include_blank => true, class: "form-control" %>
            </div>
          </div>

           <div class="form-group col-md-6">
            <div class="col-sm-6">
              <label for="">Cidade de Destino</label>
              <%= form.collection_select :destination_id, City.all, :id, :name, :include_blank => true, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="col-sm-6">
             <label for="">Carro da Viagem</label>
              <%= form.collection_select :car_id, Car.all, :id, :model, :include_blank => true, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="col-sm-6">
             <label for="">Motoristas</label>
              <%= form.select(:driver_ids, Driver.all.collect {|t| [t.nickname, t.id]}, {}, {multiple: true}) %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-9">
            <div class="col-sm-9">
              <label for="">Data de Partida</label>
              <div>
              <%= form.datetime_select :date, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <div class="float-right">
                <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Salvar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
