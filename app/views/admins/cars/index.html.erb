<div class="container-fluid">
  <a href="/admins/cars/new">
    <button type="button" class="btn btn-success" style="margin-left:15px ;"><i class="fas fa-user-plus"></i>
    <b>Novo Carro</b></button>
  </a>
<div class="card-body">
  <div class="table-responsive">
    <table id="myTable" class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Model</th>
          <th>Placa</th>
          <th>Quantidade de Lugares</th>
          <th>Ativo ?</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @cars.each do |var| %>
          <tr>
            <td> <%= var.id %> </td>
            <td> <%= var.model %> </td>
            <td> <%= var.plate %> </td>
            <td> <%= var.number_seats %> </td>
            <td> <%= humanize_boolean(var.active) %> </td>
            <td>
              <%= link_to edit_admins_car_path(var),
                class: "btn btn-primary btn-xs btn-green-alt" do %>
                <i class="fas fa-edit"></i>
                Editar
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
