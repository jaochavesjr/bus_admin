<h6 class="m-3 font-weight-bold text-primary"> <%= "#{action_message} Usuário"%></h6>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card" style="height: 30rem; padding-top: 4%;">
  <div class="col-12">
    <%= form_with(model: [ :admins, @admin], local: true) do |admin| %>
      <div class="container">
        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <label for="">E-mail</label>
              <%= admin.text_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">Senha</label>
              <%= admin.password_field :password, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">Confirmação da Senha</label>
              <%= admin.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <div class="float-right">
                <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Salvar</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
